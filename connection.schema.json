{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "database": {
      "title": "Database file",
      "type": "string",
      "minLength": 1
    },
    "duckdbCliPath": {
      "title": "DuckDB CLI executable",
      "type": "string",
      "minLength": 1
    },
    "readOnly": {
      "title": "Read-only connection",
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "database"
  ]
}
